<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:alpha="10"
    tools:context=".SourceCode.activities.SocialFeed">

    <!-- Rectangle 1 -->


    <!-- Rectangle 14 -->

    <!-- Polygon 1 -->

    <View
        android:id="@+id/FeedFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/post_Frame"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="#2980B9"
        app:cardBackgroundColor="#2980B9"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/post_EditText"
            android:maxLength="30"
            android:layout_width="370dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/post"
            android:hint="Post..."
            android:textColorHint="#000000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/postButton"
            android:maxLength="30"
            android:layout_width="43dp"
            android:layout_height="38dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/postbutton"
            android:text="P"
            android:textSize="17sp" />

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_Feed_RecView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="39dp"
        android:background="#57A8DF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_Frame" />
</androidx.constraintlayout.widget.ConstraintLayout>