<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:alpha="10"
    tools:context=".MainActivities.activities.SocialFeed">

    <!-- Rectangle 1 -->


    <!-- Rectangle 14 -->

    <!-- Polygon 1 -->

    <View
        android:id="@+id/FeedFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/post_Frame"
        android:layout_width="353dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:background="#2980B9"
        app:cardBackgroundColor="#2980B9"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/post_EditText"
            android:layout_width="276dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/post"
            android:hint="Post..."
            android:textColorHint="#000000" />

        <View
            android:id="@+id/postButton"
            android:layout_width="43dp"
            android:layout_height="38dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/postbutton" />

        <ImageButton
            android:id="@+id/postImage_Button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_image_24" />

        <ImageButton
            android:id="@+id/postVideo_Button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/ic_baseline_videocam_24" />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_Feed_RecView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="39dp"
        android:alpha="30dp"
        android:background="#57A8DF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_Frame" />
</androidx.constraintlayout.widget.ConstraintLayout>